<div class='row justify-content-center'>
  <div class='col-5'>
<h1>Create A New Play</h1>

<% if @play.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>The form contains <%= pluralize(@play.errors.count, "error") %>.</p>
    <ul>
    <% @play.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
<%= form_for [current_user, @play] do |f| %>
  <div class="form-group">
    <%= f.label 'Name of Play' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label 'Playbook(s)' %>
      <%= f.collection_check_boxes :playbook_ids, current_user.playbooks, :id, :name, class: 'checkbox', include_hidden: false do |b| %>
        <div class='checkbox'>
          <%= b. check_box %>
          <%= b.label %>
        </div>
      <% end %>
  </div>
  <%= f.submit 'Create Play', class: 'btn btn-primary' %>
<% end %>
</div>
</div>

