<%= form_for [current_user, @play] do |f| %>
  <div class="form-group">
    <%= f.label 'Name of Play' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label 'Playbook(s) - Must select at least one' %>
      <%= f.collection_check_boxes :playbook_ids, current_user.playbooks, :id, :name, class: 'checkbox', include_hidden: false do |b| %>
        <div class='checkbox'>
          <%= b. check_box %>
          <%= b.label %>
        </div>
      <% end %>
  </div>
  <%= f.submit submit_msg, class: 'btn btn-primary' %>
<% end %>
