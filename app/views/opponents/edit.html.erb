
<div class='row justify-content-center'>
  <div class='col-5'>
<h1>Edit Opponent</h1>

<% if @opponent.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>The form contains <%= pluralize(@opponent.errors.count, "error") %>.</p>
    <ul>
    <% @opponent.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
<%= form_for [current_user, @opponent] do |f| %>
  <div class="form-group">
    <%= f.label 'Name of Opponent' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Opponent's Mascot" %>
    <%= f.text_field :mascot, class: 'form-control' %>
  </div>

  <%= f.submit 'Edit Opponent', class: 'btn btn-primary' %>
<% end %>
</div>
</div>
