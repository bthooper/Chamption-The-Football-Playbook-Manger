
<div class='row justify-content-center'>
  <div class='col-5'>
<h1>Create New Playbook</h1>

<% if @playbook.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>The form contains <%= pluralize(@playbook.errors.count, "error") %>.</p>
    <ul>
    <% @playbook.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
<%= form_for @playbook do |f| %>
  <div class="form-group">
    <%= f.label 'Name of Playbook' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Situation' %>
    <%= f.text_field :situation, class: 'form-control' %>
  </div>



  <%= f.submit 'Create Playbook', class: 'btn btn-primary' %>
<% end %>
</div>
</div>
