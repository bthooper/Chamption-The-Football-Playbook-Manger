<h1>Create New Playbook</h1>

<%= form_for @playbook do |f| %>
  <div class="form-group">
    <%= f.label 'Name of Playbook' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Situation' %>
    <%= f.text_field :situation, class: 'form-control' %>
  </div>



  <%= f.submit 'Create Playbook', class: 'btn btn-primary' %>
<% end %>
