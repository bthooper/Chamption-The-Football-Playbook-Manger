<h1><%= current_user.name %>'s Games</h1>

<table class='table'>
  <thead>
    <tr>
      <th scope='col'>Date</th>
      <th scope='col'>Opponent</th>
      <th scope='col'>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @games.by_date.each do |game| %>
      <tr>
        <td><%= link_to game.date, user_game_path(current_user, game) %></td>
        <td><%= game.opponent.name %> <%= game.opponent.mascot %></td>
        <td><%= game.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

      


<%= link_to "Create new game", new_user_game_path %>
